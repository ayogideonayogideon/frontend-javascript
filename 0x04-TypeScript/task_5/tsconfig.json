{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "js/subjects/*.ts",
    "js/main.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "node_modules/**/*",
    "**/node_modules/**/*"
  ]
}